@using OdeToFood.Core
@model Restaurant

<div class="card">
    <div class="card-body">

        <div class="card-title">
            <h3>@Model.Name</h3>
        </div>
        <div class="card-text">
            <span>Location: @Model.Location</span>
            <span>Location: @Model.Cuisine</span> 
            <a class="btn btn-lg"
               asp-page="./Detail"
               asp-route-restaurantId="@Model.Id">
                Detail
            </a>
            <a class="btn btn-lg"
               asp-page="./Edit"
               asp-route-restaurantId="@Model.Id">
                Edit
            </a>
            <a class="btn btn-lg"
               asp-page="./Delete"
               asp-route-restaurantId="@Model.Id">
                Delete
            </a>
        </div>
    </div>
</div>
